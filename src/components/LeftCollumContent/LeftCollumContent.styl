.LeftCollumContent
  color: white;
  font-size: 40px;
  &-content
    padding 5% 9%
    height 100vh;
    width: 50%;
    position absolute
    top 0px
    z-index 4
  &-title
    display: flex;
    align-items: center;
    width: 100%;
    position: relative;
    h1
      margin: 0
      margin-left: 10px;
      color: white;

    .fa-bars
      font-size: 44px;
      &:hover
        cursor: pointer;
        color: #1ea075;

    &-text
      font-size: 44px;
      margin-left: 30px;
      font-weight: 300
      text-align: left;
  &-description
    font-size: 44px;
    font-weight: 300
    text-align: left;

@media screen and (max-width: 1020px)
  .LeftCollumContent
    &-content
      width 100%
      height auto
