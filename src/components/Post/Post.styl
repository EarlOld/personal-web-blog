.Post
  margin: 0 0 10%;
  padding: 0 0 5%;
  border-bottom: 1px solid;
  &-text
    margin-top: 15px;
    text-align: justify;
    font-size: 16px;
    line-height: 21px;
    color: #333;
    p
      text-indent: 20px;

  &-title
    font-size: 28px;
    line-height: 1.5;
    margin: 5px 0;
    color: #333;
    font-weight: 600;
  &-details
    color: #bbb;
    margin-left: -5px;
    span
      margin-right: 5px;
    .fa
      margin: 5px;
    a
      color: #bbb;
      text-decoration: none;
    &-elem
      cursor: pointer;
      &:hover
        color: #1ea075;
        a
          color: #1ea075;
          text-decoration: none;
