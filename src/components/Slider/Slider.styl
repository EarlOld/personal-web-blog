.Slider
  position: relative;
  height: 100vh;
  .carousel-fade
    .carousel-inner
      .item
        height: 100vh;
        transition-property: opacity;
        transition: 2s;
        img
          position: absolute;
          width: 1400px;
      .item,
      .active.left,
      .active.right
        opacity: 0;

      .active,
      .next.left,
      .prev.right
        opacity: 1;

      .next,
      .prev,
      .active.left,
      .active.right
        left: 0;
        transform: translate3d(0, 0, 0);

    .carousel-control
      z-index: 2;

@media screen and (max-width: 1020px)
  .Slider
    height: auto;
    .carousel-fade
      .carousel-inner
        .item
          height: auto;
          img
            position: relative;
            height: auto !important;
            width: 100%;
